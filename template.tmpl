<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ .TagTitle }}</title>
  <link rel="stylesheet" href="{{ .GivenColor }}" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <style type="text/css">
    .mdl-layout-title {
      text-decoration: none;
      color: #fff;
    }

    .list-contents {
      border-radius: 2px;
      padding: 20px 32px;
      margin-bottom: 80px;
    }

    .file-list {
      padding: 0;
    }

    .file-link {
      text-decoration: none;
    }

    code {
      border-radius: 3px;
      background-color: rgba(0, 0, 0, .1);
      padding: 2px 3px;
      color: rgba(0, 0, 0, .87);
    }

    .file-selected {
      background-color: #fffbdd;
      border-right: 2px solid #d6d0a6;
    }

    .info-tooltip {
      font-size: 13px;
      color: #777;
    }

    #breadcrumb {
      padding-left: 0;
    }

    #breadcrumb:after {
      content: " ";
      display: table;
      clear: both;
    }

    #breadcrumb li {
      list-style-type: none;
      float: left;
      display: block;
      margin-right: 3px;
      margin-bottom: 3px;
    }

    #breadcrumb li a {
      display: inline-block;
      padding: 3px 8px;
      text-decoration: none;
      background-color: #dedede;
      border-radius: 6px;
    }

    #breadcrumb li a:hover,
    #breadcrumb li a:focus,
    #breadcrumb li a:active {
      background-color: #d6d6d6;
    }

    #breadcrumb:after {
      content: " ";
      display: block;
      border-bottom: 1px solid #e6dcdc;
      margin: 0 -32px;
      margin-bottom: 35px;
      height: 30px;
    }

    #info-block {
      background: #fff3cd;
      border: 1px solid #fbe7ab;
      padding: 10px 12px 7px 12px;
      font-size: 16px;
      color: #856404;
      border-radius: 3px;
      display: block;
      width: 75%;
      min-width: 350px;
      margin: 0 auto;
    }

    #info-block .material-icons {
      vertical-align: text-top;
      font-size: 16px;
    }

    .download-link {
      position: relative;
      display: block;
    }

    .download-link .download-icon, .download-link .nondownload-icon {
      transition-property: opacity, transform;
      transition-duration: 0.2s;
      transition-timing-function: ease-out;
      transform-origin: center;
      transform: rotateZ(0deg);
      opacity: 1;
    }

    .download-link .download-icon {
      position: absolute;
      left: 0;
      transform: rotateZ(-180deg);
      opacity: 0;
    }

    .download-link:hover .nondownload-icon, .download-link:focus-within .nondownload-icon {
      transform: rotateZ(180deg);
      opacity: 0;
    }

    .download-link:hover .download-icon, .download-link:focus-within .download-icon {
      transform: rotateZ(0deg);
      opacity: 1;
    }
  </style>
</head>

<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <a href="/" class="mdl-layout-title" title="Go to the folder's root">{{ .PageTitle }}</a>
        <div class="mdl-layout-spacer"></div>
        {{ if not .HideLinks }}
        <nav class="mdl-navigation mdl-layout--large-screen-only">
          <a class="mdl-navigation__link" href="https://github.com/patrickdappollonio/http-server" target="_blank"><i
              class="material-icons">code</i> Source code</a>
          <a class="mdl-navigation__link" href="https://hub.docker.com/r/patrickdappollonio/docker-http-server"
            target="_blank"><i class="material-icons">link</i> Docker Hub</a>
        </nav>
        {{ end }}
      </div>
    </header>
    <main class="mdl-layout__content">
      <div class="page-content">
        {{ if ne .Banner "" }}
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--12-col">
            <div id="info-block">
              <i class="material-icons">info</i> {{ .Banner | html }}
            </div>
          </div>
        </div>
        {{ end }}

        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
          <div
            class="list-contents mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
            {{ if .Breadcrumb -}}{{ $prefix := .PathPrefix }}
            <ul id="breadcrumb">{{ range .Breadcrumb }} <li><a href="{{ mergepathtrail $prefix .URL }}"
                  title="Browse to {{ mergepathtrail $prefix .URL }}">{{ .Name }}</a></li> {{ end }}</ul>
            {{- end }}
            {{ if and (not .IncludeBack) (not .Files) }}
            <div>
              <h3 class="nothing-found"><i class="material-icons">error</i> No files found!</h3>
              <p>There are no files in the folder <code>{{ .Path }}</code>.</p>
            </div>
            {{ end }}
            <ul class="file-list mdl-list">
              {{ if .IncludeBack -}}
              <li class="mdl-list__item mdl-list__item--two-line">
                <span class="mdl-list__item-primary-content">
                  <i class="material-icons mdl-list__item-icon">folder</i>
                  <span><a class="file-link" href="{{ .BackURL }}">../</a></span>
                  <span class="mdl-list__item-sub-title">Directory</span>
                </span>
              </li>
              {{- end }}
              {{ $path := .Path }}{{ $prefix := .PathPrefix }}{{ $filepath := .FilePath -}}
              {{- range .Files -}}
              <li class="mdl-list__item mdl-list__item--two-line" data-name="{{ .Name }}">
                <span class="mdl-list__item-primary-content">
                  {{ if .IsDir -}}
                  <i class="material-icons mdl-list__item-icon">folder</i>
                  {{- else -}}
                  <a href="{{ mergepath $prefix $path .Name }}" class="download-link" download>
                    <i class="material-icons mdl-list__item-icon download-icon">download_outline</i>
                    <i class="material-icons mdl-list__item-icon nondownload-icon">description</i>
                  </a>
                  {{- end }}
                  <span>
                    <a class="file-link" href="{{ mergepath $prefix $path .Name }}{{ if .IsDir }}/{{ end }}">{{ .Name
                      }}</a>
                    {{ if not .IsDir -}}
                    <i id="file-{{ .Name | genid }}" class="material-icons info-tooltip">info_outline</i>
                    <div class="mdl-tooltip" data-mdl-for="file-{{ .Name | genid }}">
                      Updated on: {{ .ModTime | prettytime }}<br>
                      Permissions: {{ .Mode }}
                    </div>
                    {{- end }}
                  </span>
                  <span class="mdl-list__item-sub-title">
                    {{ if not .IsDir -}}
                    {{ contenttype $filepath . }}; {{ .Size | humansize }}
                    {{- else -}}
                    Directory
                    {{- end }}
                  </span>
                </span>
              </li>
              {{- end }}
            </ul>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.2.0/zepto.min.js"></script>

  <script type="text/javascript">
    $(window).on("load", function () {
      "use strict";

      // Colorize those files selected in the URI hash
      var colorHashFiles = function () {
        var elems = window.location.hash.substr(1).split("/");
        $.each(elems, function (index, item) {
          $("[data-name='" + item + "']").first().addClass("file-selected");
        });
      };

      // Detect hash changes in the UI
      $(window).on("hashchange", colorHashFiles);

      // Run it when entering the screen
      colorHashFiles();

      // Click on one or many and change the logic
      $("li[data-name]").on("click", function (e) {
        if (!(e.metaKey || e.ctrlKey)) return;

        // Toggle the class of the selected element
        $(this).toggleClass("file-selected");

        // Create an array of all the selected elements
        var selected = $(".file-selected").map(function () {
          return $(this).attr("data-name");
        }).get();

        if (selected.length > 0) {
          window.location.hash = selected.join("/");
        } else {
          history.replaceState({}, document.title, ".");
        }
      });
    });
  </script>
</body>

</html>
